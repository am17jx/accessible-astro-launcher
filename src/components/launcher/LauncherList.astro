---
/**
 * LauncherList Component
 *
 * @description A wrapper for launcher items with proper ARIA listbox role
 */

interface Props {
  /**
   * Additional classes to apply
   */
  class?: string
  /**
   * HTML attributes to spread on the list
   */
  [key: string]: string | undefined
}

const { class: className, ...rest } = Astro.props
---

<ul class:list={['launcher-list', className]} role="listbox" aria-label="Launcher list" {...rest}>
  <slot />
</ul>

<style>
  :where(.launcher-list) {
    display: flex;
    flex-direction: column;
    list-style: none;
    padding: 0;
  }
</style>
