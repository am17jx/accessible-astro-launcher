---
/**
 * LauncherItem Component
 *
 * @description An individual launcher item (navigation link or action button)
 * Uses semantic <a> for navigation and <button> for actions
 */

interface Props {
  /**
   * Type of item: navigation (link) or action (button)
   */
  type: 'navigation' | 'action'
  /**
   * Display label for the item
   */
  label: string
  /**
   * URL for navigation items
   */
  href?: string
  /**
   * Action identifier for action items (dispatched via launcher:action event)
   */
  onAction?: string
  /**
   * Initial checked state for action items (for toggle buttons)
   * The LED indicator will reflect this state
   */
  checked?: boolean
  /**
   * Additional search keywords (comma-separated in data attribute)
   */
  keywords?: string[]
  /**
   * Label for the item type indicator (i18n support)
   * @default "Go to" for navigation, "Run" for action
   */
  typeLabel?: string
  /**
   * Additional classes to apply
   */
  class?: string
  /**
   * HTML attributes to spread on the item
   */
  [key: string]: string | string[] | boolean | undefined
}

const {
  type,
  label,
  href,
  onAction,
  checked = false,
  keywords = [],
  typeLabel,
  class: className,
  ...rest
} = Astro.props

// Default type labels for i18n
const defaultTypeLabel = type === 'navigation' ? 'Go to' : 'Run'
const resolvedTypeLabel = typeLabel ?? defaultTypeLabel

// Generate unique ID for the item
const itemId = `launcher-item-${Math.random().toString(36).substring(2, 9)}`

// Common data attributes for the interactive element
const dataAttrs = {
  'data-type': type,
  'data-label': label,
  'data-keywords': keywords.join(','),
  ...(type === 'navigation' && { 'data-href': href }),
  ...(type === 'action' && { 'data-action': onAction }),
}
---

<li class:list={['launcher-item', className]} {...rest}>
  {
    type === 'navigation' ? (
      <a
        id={itemId}
        href={href}
        class="item navigation"
        role="option"
        aria-selected="false"
        {...dataAttrs}
      >
        <span class="icon">
          <slot name="icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <path d="M6 22a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h8a2.4 2.4 0 0 1 1.704.706l3.588 3.588A2.4 2.4 0 0 1 20 8v12a2 2 0 0 1-2 2z" />
              <path d="M14 2v5a1 1 0 0 0 1 1h5" />
              <path d="M10 9H8" />
              <path d="M16 13H8" />
              <path d="M16 17H8" />
            </svg>
          </slot>
        </span>
        <span class="text">
          <span class="label">{label}</span>
        </span>
        <span class="type" aria-hidden="true">
          {resolvedTypeLabel}
        </span>
      </a>
    ) : (
      <button
        id={itemId}
        type="button"
        class="item action"
        role="option"
        aria-selected="false"
        aria-checked={checked ? 'true' : 'false'}
        {...dataAttrs}
      >
        <span class="led" aria-hidden="true" />
        <span class="text">
          <span class="label">{label}</span>
        </span>
        <span class="type" aria-hidden="true">
          {resolvedTypeLabel}
        </span>
      </button>
    )
  }
</li>

<script>
  /**
   * LauncherItem State Sync
   *
   * Listens for external state change events and updates the aria-checked
   * attribute accordingly. This allows launcher action items to stay in sync
   * with preferences controlled elsewhere (e.g., DarkMode component).
   *
   * Supported events:
   * - darkmode:change → syncs with data-action="toggle-dark-mode"
   * - highcontrast:change → syncs with data-action="toggle-high-contrast"
   * - reducemotion:change → syncs with data-action="toggle-reduced-motion"
   */

  // Map of event names to their corresponding action identifiers
  const eventActionMap: Record<string, string> = {
    'darkmode:change': 'toggle-dark-mode',
    'highcontrast:change': 'toggle-high-contrast',
    'reducemotion:change': 'toggle-reduced-motion',
  }

  /**
   * Update aria-checked state for a launcher action item
   */
  const updatePressedState = (action: string, enabled: boolean) => {
    const items = document.querySelectorAll<HTMLButtonElement>(`.action[data-action="${action}"]`)

    items.forEach((item) => {
      item.setAttribute('aria-checked', enabled ? 'true' : 'false')
    })
  }

  // Set up listeners for each mapped event
  Object.entries(eventActionMap).forEach(([eventName, action]) => {
    document.addEventListener(eventName, ((event: CustomEvent<{ enabled: boolean }>) => {
      updatePressedState(action, event.detail.enabled)
    }) as EventListener)
  })

  /**
   * Initialize all preference states
   */
  const initializePreferenceStates = () => {
    if (typeof window.darkMode !== 'undefined') {
      updatePressedState('toggle-dark-mode', window.darkMode.isEnabled())
    }
    if (typeof window.highContrast !== 'undefined') {
      updatePressedState('toggle-high-contrast', window.highContrast.isEnabled())
    }
    if (typeof window.reducedMotion !== 'undefined') {
      updatePressedState('toggle-reduced-motion', window.reducedMotion.isEnabled())
    }
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initializePreferenceStates)

  // Re-sync after Astro view transitions
  document.addEventListener('astro:page-load', initializePreferenceStates)

  // Also initialize when launcher opens (preference APIs should be ready by then)
  document.addEventListener('launcher:open', initializePreferenceStates)
</script>

<style>
  :where(.item) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--launcher-space-sm);
    transition:
      background-color var(--launcher-animation-duration) var(--launcher-animation-timing),
      translate var(--launcher-animation-duration) var(--launcher-animation-timing);
    cursor: pointer;
    border: none;
    border-radius: var(--launcher-radius-md);
    background-color: transparent;
    padding: var(--launcher-space-xs) var(--launcher-space-sm);
    inline-size: 100%;
    scroll-margin-block-start: calc(var(--launcher-space-xl) + var(--launcher-space-sm));
    color: var(--launcher-text-color);
    text-align: start;
    text-decoration: none;
  }

  :where(.item:hover),
  :where(.item:focus-visible),
  :where(.item[aria-selected='true']) {
    translate: 0 -2px;
    background-color: var(--launcher-interaction-color);
  }

  :where(.text) {
    display: flex;
    flex: 1;
    min-inline-size: 0;
  }

  :where(.label) {
    overflow: hidden;
    font-size: var(--launcher-font-size-lg);
    line-height: var(--launcher-line-height);
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  :where(.type) {
    flex-shrink: 0;
    opacity: 0;
    transition: opacity var(--launcher-animation-duration) var(--launcher-animation-timing);
    font-size: var(--launcher-font-size-sm);
    text-transform: uppercase;
  }

  :where(.item:hover) .type,
  :where(.item[aria-selected='true']) .type {
    opacity: 1;
  }

  /* Small visual adjustment for icon and LED */
  :where(.icon, .led) {
    margin-block-start: -1px;
  }

  /* LED Indicator for action buttons */
  :where(.led) {
    display: block;
    position: relative;
    flex-shrink: 0;
    transition:
      background-color var(--launcher-animation-duration) var(--launcher-animation-timing),
      box-shadow var(--launcher-animation-duration) var(--launcher-animation-timing);
    border: 1px solid hsl(0deg 0% 0% / 0.25);
    border-radius: 50%;
    background: hsl(0deg 0% 40%);
    inline-size: 14px;
    block-size: 14px;
  }

  /* Glossy highlight reflection */
  :where(.led)::after {
    position: absolute;
    transform: rotate(-45deg);
    inset-block-start: 12%;
    inset-inline-start: 18%;
    border-radius: 50%;
    background: hsl(0deg 0% 100% / 0.85);
    inline-size: 35%;
    block-size: 20%;
    pointer-events: none;
    content: '';
  }

  /* Dim highlight when LED is off */
  :where(.action[aria-checked='false']) .led::after {
    opacity: 0.2;
  }

  :where(.action[aria-checked='true']) .led {
    box-shadow:
      inset 0px 1px 2px hsl(140deg 80% 75% / 0.6),
      inset 0px -1px 2px hsl(140deg 100% 20% / 0.4),
      0px 0px 4px hsl(140deg 80% 45%),
      0px 0px 12px hsl(140deg 80% 50% / 0.7),
      0px 0px 24px hsl(140deg 80% 60% / 0.7);
    border-color: hsl(150, 5%, 8%);
    background: radial-gradient(
      circle at 50% 70%,
      hsl(140deg 80% 70%) 0%,
      hsl(140deg 75% 55%) 50%,
      hsl(140deg 70% 40%) 100%
    );
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    :where(.item),
    :where(.type),
    :where(.led) {
      transition: none;
    }

    :where(.item:hover),
    :where(.item:focus-visible),
    :where(.item[aria-selected='true']) {
      translate: 0 0;
    }
  }
</style>
